platform :ios, '8.0'
inhibit_all_warnings!

target 'SwiftDemoSet' do
# Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  pod 'RxSwift',    '~> 4.0'
  pod 'RxCocoa',    '~> 4.0'
  pod 'Alamofire', '~> 4.7.2'
  pod 'Moya/RxSwift', '~> 11.0'
  pod 'SnapKit', '~> 4.0.0'
  pod 'DeviceKit', '~> 1.3'
  pod 'PKHUD', '~> 5.0'
  pod 'SwifterSwift'
  
end
